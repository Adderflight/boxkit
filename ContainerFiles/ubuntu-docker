FROM ghcr.io/ublue-os/docker-distrobox:latest

LABEL com.github.containers.toolbox="true" \
      usage="This image is meant to be used with the toolbox or distrobox command" \
      summary="customized ublue docker-distrobox image" \
      maintainer="Adderflight"

RUN ln -fs /usr/bin/distrobox-host-exec /usr/bin/kate
RUN ln -fs /usr/bin/distrobox-host-exec /usr/bin/flatpak
